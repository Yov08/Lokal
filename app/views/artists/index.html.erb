<div class="banner-event">
  <div class="container">
    <h1>View Artists</h1>
  </div>
</div>

<div class="container">
  <% @artists.each do |artist| %>
    <div class="row">
      <div class="col">
        <h1>Yo!</h1>
        ------------------
        <% image_tag ('logo.png') %>
      </div>
      <div class="col">
        <p class="date"><%= artist.name %></p>
        <p class="address"><i class="fa-solid fa-location-dot"></i>
        <%= link_to "More", artist_path(artist), class: "button-event" %><br>
        -------------------
      </div>
    </div>
  <% end %>
  <%= link_to "Back", root_path, class: "button-event" %>
</div>
