<div class="container">
  <h1>Artist Show Page</h1>

  <div class="container-artist">
    <div class="banner-show-artist">
      <div class="img-artist-container">
        <img src=<%= @artist.image_url %>>
      </div>
    </div>

    <div class="show-artist-details">
      <h2><%= @artist.name %></h2>
      <h4>Category: <%= @artist.category %></h3>
      <h5><%= @artist.rating %></h5>
    </div>

    <div class="artist-description">
      <p>Bio: <%= @artist.biography %></p>
    </div>

    <div class="artist-description">
      <% if @events.present? %>
        <p>Upcoming Events: <%= link_to @events.first.name, event_path(@events.first) %></p>
        <p>Upcoming Date: <%= @events.first.date %></p>
      <% end %>
    </div>

    <div class="text-center">
      <%= link_to "Back", :back, class: "button-event" %>
    </div>
  </div>
</div>
