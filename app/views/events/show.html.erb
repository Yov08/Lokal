<div class="container">
  <div class="back-space col-2 col-sm-2 col-md-2 col-lg-2">
    <%= link_to "<", events_path, class: "back-button" %>
  </div>

  <div class="banner-show-event col-8 col-sm-8 col-md-8 col-lg-8">
    <div class="container-event">
      <div class="img-event-container">
        <% if @event.present? %>
          <img src="<%= @event.image_url %>">
          <p class="price-event">As from Rs <%= @event.price_normal %></p>
        <% end %>
      </div>
      <div class="show-event-details">
        <h2><%= @event.name if @event.present? %></h2>
      </div>

      <div class="row">
        <div class="col-3 col-sm-3 col-md-3 col-lg-3 border-right">
          <div class="circle-text">
            <p><%= @event.rating %></p>
          </div>
        </div>
        <div class="col-9 col-sm-9 col-md-9 col-lg-9">
          <div class="event-date">
            <p><%= @event.date if @event.present? %></p>
          </div>
        </div>
      </div><br>

      <div class="row">
        <div class="col-3 col-sm-3 col-md-3 col-lg-3 border-right">
          <div class="circle-map">
            <p>Map</p>
          </div>
        </div>
        <div class="col-9 col-sm-9 col-md-9 col-lg-9">
          <div class="event-address">
            <% if @event.present? %>
              <p><strong><%= @event.venue %></strong></p>
              <p><%= @event.address %></p>
            <% end %>
          </div>
        </div>
      </div><br>

      <div class="event-description">
        <% if @event.present? %>
          <p><%= @event.description %></p>
        <% end %>
      </div>

      <div>
        <% if @artists.present? %>
          <p>Artist: <%= link_to @artists.first.name, artist_path(@artists.first) %> </p>
        <% end %>
      </div>

      <% if user_signed_in? %>
        <% if current_user.likes?(@event) %>
          <%= button_to 'Unlike', event_like_path(@event, current_user.likes.find_by(event: @event)), method: :delete %>
        <% else %>
          <%= button_to 'Like', event_likes_path(@event), method: :post %>
        <% end %>
      <% end %>


      <div class="text-center">
        <% if @event.present? %>
          <%= link_to "Buy Tickets", new_booking_path(event_id: @event.id), class: "button-main" %>
          <%= link_to "Back", request.referrer, class: "button-event" %>
        <% end %>
      </div><br>
    </div>
  </div>
</div>
