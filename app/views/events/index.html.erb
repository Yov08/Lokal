<div class="container-main">
  <div class="banner-event">
  <h1>Upcoming Events</h1>
  </div>

  <div class="flex">
    <% @events.each do |event| %>
      <div>

        <div class="image">
          <img src=<%= event.image_url %>  alt="">
        </div>

        <div>
          <h1><%= event.date %></h1>
          <h1><%= event.name %></h1>
          <h3><%= event.address %></h3>
        </div>

      </div>
    <% end %>
  </div>


  <div class="col">
      <div class="new-event">
        <%= link_to 'New Event', new_event_path, :class => "btn btn-primary"%>
      </div>
      <div class="back">
        <%= link_to "Back", root_path, class: "btn btn-dark" %>
      </div>
  </div>
</div>
