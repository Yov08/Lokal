<div class="container">
  <h1>Upcoming Events</h1>

  <div class="row mt-5 justify-content-md-left">
    <% @events.each do |event| %>
      <div class="cards bg-light">
        <div class="col-12 col-md-8 justify-content-center">
          <h3 class="card-title"><%= event.name %></h3>
        </div>
        <p class="card-text">Date: <%= event.date %></p>
        <p class="card-text">Event: <%= event.name %> @ <%= event.venue %></p>
        <p class="card-text">Address: <%= event.address %></p>
        <p class="card-text">Image NOT YET FINISHED: <%= event.image_url %></p>
        <p>Image <%= event.image_url %></p>
        <%= link_to "Info", event_path(event), class: "button-main" %>
        <p>----------------------------------------------TEST LINE: !!!WORKING!!!</p>
        <p>***************ADD SEPARATION BETWEEN CARDS***************</p>
      </div>
    <% end %>
  </div>
  <div class="col">
    <%= link_to 'New Event', new_event_path, :class => "btn btn-primary"%>
    <%= link_to "Back", root_path, class: "btn btn-dark" %>
  </div>
</div>
