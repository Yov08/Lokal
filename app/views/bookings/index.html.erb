<script>
  const list = document.querySelectorAll(".list");
  list.forEach((item) => {
    item.addEventListener("click",(event) => {
      event.preventDefault()
      list.forEach((item)=> {
        item.classList.remove("active")
      })
      event.currentTarget.classList.add("active")

  })});
</script>
